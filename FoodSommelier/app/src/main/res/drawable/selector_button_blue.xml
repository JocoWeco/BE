<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌린 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0A7BD6" />
            <corners android:radius="100dp" />
            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <stroke android:width="1dp" android:color="#0869B3" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" />
            <corners android:radius="100dp" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape>
    </item>
</selector>