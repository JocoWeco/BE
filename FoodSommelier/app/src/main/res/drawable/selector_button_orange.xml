<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌렀을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E05500" />
            <corners android:radius="100dp" />
            <padding android:bottom="0dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <stroke android:width="1dp" android:color="#CC4400" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" />
            <corners android:radius="100dp" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="0dp" />
        </shape>
    </item>
</selector>