<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_local_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력해주세요(20자 이내)"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_enable_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요(20자 이내)"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 다시 입력해주세요"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />

        <!-- 개인 정보 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력해주세요(20자 이내)"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_enable_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_enable_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy-mm-dd"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜 선택"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/group_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/btn_gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성"
                android:textSize="16sp" />
        </RadioGroup>



        <!-- 정보 수집 동의-->
        <CheckBox
            android:id="@+id/check_agree_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 정보 수집 동의"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/check_agree_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인 정보 수집 동의"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_info" />

</androidx.constraintlayout.widget.ConstraintLayout>